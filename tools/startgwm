#set -x

get_network()
{
    interface=$(ip route get 1.1.1.1 2> /dev/null | head -n1 | cut -d' ' -f5)
    if [ -z "$interface" ]
    then
        echo ğŸš«
    elif echo $interface | grep wlan > /dev/null
    then
        echo ğŸ›œ
    else
        echo ğŸ–§ 
    fi
}

get_vol()
{
    vol=$(amixer get Master | tail -1 | sed 's/.*\[\([0-9]*\)%\].*/\1/')
    if amixer get Master | grep off > /dev/null
    then
        echo ğŸ”‡
    elif [ $vol -lt 25 ]
    then
        echo "ğŸ”ˆ$vol%"
    elif [ $vol -lt 75 ]
    then
        echo "ğŸ”‰$vol%"
    else
        echo "ğŸ”Š$vol%"
    fi
}

get_time()
{
    date "+%m/%d %a %p%H:%M"
}

get_power()
{
    if acpi -a 2> /dev/null | grep line
    then
        if acpi -a 2> /dev/null | grep on-line
        then
            power="ğŸ”Œ$(acpi -b 2> /dev/null | awk '{ print $4 "+" $5 }' | tr -d ',')"
        else
            power="ğŸ”‹$(acpi -b 2> /dev/null | awk '{ print $4 "-" $5 }' | tr -d ',')"
        fi
        echo $power
    fi
}

get_weather()
{
    # ä¸­åœ‹å¤©æ°£ç¶²(www.weather.com.cn)ä¸­åŸå¸‚idï¼Œåœ¨è©²ç¶²ç«™ä¸­è¼¸å…¥åŸå¸‚åå¯åœ¨urlçœ‹åˆ°idï¼Œ
    weather_city_id=101280801

    if [ -n "$weather_city_id" ]
    then
        weather_url="http://forecast.weather.com.cn/town/weather1dn/$weather_city_id.shtml"
        rm -f /tmp/weather
        wget "$weather_url" -O /tmp/weather > /dev/null 2>&1 \
            && grep time.*minTemp /tmp/weather \
            | sed 's/.*temp":\([0-9\.]*\).*maxTemp":\([0-9\.]*\).*minTemp":\([0-9\.]*\).*.*weather":"\(.*\)".*/\1Â°C[\2-\3]\4/g'
    fi
}

get_root_name()
{
    echo "$(get_power) $(get_network) $(get_vol) $(get_time)" \
        | tr -s ' ' | sed 's/^ //' | sed 's/ $//'
}

main()
{
    [ -f ~/.Xresources ] && xrdb -merge ~/.Xresources &

    while true
    do
        xsetroot -name "$(get_root_name)"
        sleep "10s" 
    done &

    while true
    do
        gwm
    done
}

main
