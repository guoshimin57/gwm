xsetroot -solid black &

#export LC_ALL="zh_CN.UTF-8"
#export LANG="zh_CN.UTF-8"
#export XMODIFIERS='@im=fcitx'
#export GTK_IM_MODULE=fcitx
#export QT_IM_MODULE=fcitx
#fcitx > /dev/null 2>&1 &

while true
do
    # ç•¶æ”¯æŒutfæ™‚ï¼Œæ‡‰è€ƒæ…®ä½¿ç”¨ðŸ”Šã€ðŸ”‹ç­‰unicodeç¬¦è™Ÿã€‚
    VOL=$(amixer get Master | tail -1 | sed 's/.*\[\([0-9]*%\)\].*/éŸ³\1/')
    LOCALTIME=$(date "+%m/%d %a %p%H:%M")
    if acpi -a 2> /dev/null | grep off-line
    then
        BAT="ç”µ$(acpi -b 2> /dev/null | awk '{ print $4 " " $5 }' | tr -d ',')"
        xsetroot -name " $BAT $VOL $LOCALTIME"
    else
        xsetroot -name " $VOL $LOCALTIME"
    fi
    sleep 10s
